<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </Console>

        <Console name="HibernateConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level Hibernate: - %msg%n"/>
        </Console>

        <File name="HibernateFile" fileName="hibernate.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="HibernateConsole"/>
            <AppenderRef ref="HibernateFile"/>
        </Logger>

        <Logger name="org.hibernate.SQL" level="INFO" additivity="false">
            <AppenderRef ref="HibernateConsole"/>
        </Logger>

        <Logger name="ua.vedroid.cinema.Main" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
